/**index.wxss**/
#top{
  color: white;
}
#mobile-menu {
  position:fixed;
  width:150px;
  height:100%;
  background-color:#373737;
  z-index:9999;
  font-size: 20px;
  text-align: center;
}
#top .a{
  color:gray;
  display:block;
  padding:1em 5%;
  border-top:1px solid #4f4f4f;
  border-bottom:1px solid #292929;
  transition:all 0.1s ease-out;
  cursor:pointer;
}
#mobile-menu{
  position:fixed;
  top:0;left:0;
  width:150px;height:100%;
  background-color:#373737;
  z-index:9999;
  transition:all 0.3s ease-in;
}
.mobile-nav-taggle {
  color:#ffffff;
  display:inline-block;
  text-align:center;
  cursor:pointer;
}
.c-state {
  transform: rotate(0deg) scale(1) translate(-100%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(-100%, 0%);
  /*默认隐藏在-100%处*/
}
#banner{
  width: 100%;height: 178px;
}
#banner image{
  height: 100%;
}
#plinks{
  width: 100%;
  height: 95px;
  margin:  0 auto;
  margin-top: 13%;
  border-bottom: 3px solid #EFEFEF;
}
.plinks{
  text-align: center;
  float: left;
  width: 20%;
  margin-left: 4%;
  color: rgba(107,107,107,1.00);
  font-size: 14px;
}
.plinks image{
  width: 100%;
  height: 60px;
}
#slide-top{
  width: 100%;
  height: 45px;
  display: block;
  border-bottom: 3px solid #EFEFEF;
}
#slide-top-1{
  width: 5px;
  height: 20px;
  background-color: aqua;
  float: left;
  margin: 15px 0 0 13px;
}
#slide-top-2{
  font-size: 16px;
  font-weight: 900;
  float: left;
  margin:12px 0 0 5px;
}
#slide-top-3{
  float: right;
  margin: 13px 15px 0 0;
  font-size: 14px;
  font-weight: 500;
  color: rgba(157,157,157,1.00);
}
